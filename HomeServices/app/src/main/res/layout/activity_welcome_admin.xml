<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeAdmin">

    <LinearLayout
        android:id="@+id/users_list_section"
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewWelcomeAdmin"
            android:layout_width="383dp"
            android:layout_height="50dp"
            android:text="Welcome, @string/admin_name" />

        <TextView
            android:id="@+id/users_list_label"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Here's the list of our users!" />

        <ListView
            android:id="@+id/users_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>