<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoBookingPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookingTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request ServiceName Service" />

            <TextView
                android:id="@+id/spNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="provided by ServiceProvider Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a Date:" />

                <Spinner
                    android:id="@+id/dateSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a Time:" />

                <Spinner
                    android:id="@+id/timeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/confirmBookingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="requestBooking"
                android:text="Request Booking" />

        </LinearLayout>

</android.support.constraint.ConstraintLayout>